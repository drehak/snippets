# ###################################

def set_default_subcommands(cli):
    pass

if __name__ == '__main__':
    cli = LeappInspectorCLI()
    set_default_subcommands(cli)
    cli.parse()
    cli.process()
    db = LeappDatabase()
    print(db.get_tables())
